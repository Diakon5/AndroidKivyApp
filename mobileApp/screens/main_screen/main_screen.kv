#:import join os.path.join
#:import getcwd os.getcwd
#:set imageDir join(getcwd(),"mobileApp/images")

<MyButt@ButtonBehavior+BoxLayout>: #For later
    t1: ""
    t2: ""
    Label:
        text: root.t1
    Label:
        text: root.t2

<MainScreen>:
    name: 'MainScreen'
    vehicleListScroll:outputscroll
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(15)
        Label:
            size_hint_y: None
            size: self.texture_size
            text: "BUDGET ASSISTANT"
            halign: "center"
            font_size: 35
            text_size: root.width, None
        Image:
            source: join(imageDir,"missing.png")
            size: self.texture_size
            fit_mode: "contain"
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                spacing: "5px"
                size_hint_y: None
                height: self.minimum_height
                id:outputscroll
                Button:
                    text: "Subject 1"
                    size_hint_y: None
                    height: dp(60)
                    on_press:
                        root.manager.current = "DashboardScreen"
                Button:
                    id:addRowButton
                    text: "New..."
                    size_hint_y: None
                    height: dp(60)
                    on_press:
                        root.addNewCar()

