#:import join os.path.join
#:import getcwd os.getcwd
#:set imageDir join(getcwd(),"mobileApp/images")

<MyButt@ButtonBehavior+BoxLayout>: #For later
    t1: ""
    t2: ""
    orientation: 'horizontal'
    Label:
        text: root.t1
    Label:
        text: root.t2
<NewCarButton@Button>
    text: "New..."
    size_hint_y: None
    height: dp(60)
    mainscreen: None
    on_press:
        app.nursery.start_soon(root.mainscreen.listCars)


<MainScreen>:
    name: 'MainScreen'
    dbReady: app.dbReady
    on_dbReady:
        app.nursery.start_soon(self.listCars)
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(15)
        Label:
            size_hint_y: None
            size: self.texture_size
            text: "BUDGET ASSISTANT"
            halign: "center"
            font_size: 35
            text_size: root.width, None
        Image:
            source: join(imageDir,"missing.png")
            size: self.texture_size
            fit_mode: "contain"
        RecycleView:
            data: [{'widget':"Label","text":"{}".format(name)} for id, name in root.rows] + [{"widget":"NewCarButton","mainscreen":root}]
            #{"widget":"NewCarButton","mainscreen":root}
            # [{'widget':"Label","text":"{}".format(name)} for id, name in root.rows]
            key_viewclass: "widget"
            RecycleBoxLayout:
                default_size: None, dp(60)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

