#:import join os.path.join
#:import getcwd os.getcwd
#:set imageDir join(getcwd(),"mobileApp/images")

<MyButt@ButtonBehavior+BoxLayout>: #For later
    t1: ""
    t2: ""
    orientation: 'horizontal'
    Label:
        text: root.t1
    Label:
        text: root.t2

<MainScreen>:
    name: 'MainScreen'
    vehicleListScroll:outputscroll
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(15)
        Label:
            size_hint_y: None
            size: self.texture_size
            text: "BUDGET ASSISTANT"
            halign: "center"
            font_size: 35
            text_size: root.width, None
        Image:
            source: join(imageDir,"missing.png")
            size: self.texture_size
            fit_mode: "contain"
        BoxLayout:
            orientation: 'vertical'
            spacing: "5px"
            size_hint_y: None
            height: self.minimum_height
            id:outputscroll
            RecycleView:
                data: [{'text':"Name {}".format(name)} for name in root.rows]
                viewclass: "Label"
                RecycleBoxLayout:
                    default_size: None, dp(60)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
            Button:
                id:addRowButton
                text: "New..."
                size_hint_y: None
                height: dp(60)
                on_press:
                    app.nursery.start_soon(root.addNewCar)

